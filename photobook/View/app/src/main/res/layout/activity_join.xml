<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.Join">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backicon"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="141dp"
            android:layout_marginEnd="108dp"
            android:text="서비스 이용을 위해 회원가입 해주세요"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="187dp"
            android:text="이메일" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="191dp"
            android:background="@android:drawable/editbox_background"
            android:ems="9"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:inputType="text"
            android:maxLength="20" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="225dp"
            android:layout_marginTop="216dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="\@"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="265dp"
            android:layout_marginTop="216dp"
            android:background="@android:drawable/editbox_background"
            android:entries="@array/email_domains"
            android:gravity="center"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="278dp"
            android:text="비밀번호" />

        <EditText
            android:id="@+id/password"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="307dp"
            android:background="@android:drawable/editbox_background"
            android:ems="9"
            android:hint="문자, 숫자, 특수문자 포함 8~20자"
            android:inputType="text"
            android:maxLength="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="370dp"
            android:text="비밀번호 확인" />

        <EditText
            android:id="@+id/passwordCheck"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="403dp"
            android:background="@android:drawable/editbox_background"
            android:ems="9"
            android:importantForAccessibility="no"
            android:inputType="text"
            android:maxLength="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="466dp"
            android:text="닉네임" />

        <EditText
            android:id="@+id/name"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="495dp"
            android:background="@android:drawable/editbox_background"
            android:ems="9"
            android:hint="특수문자 제외 8자 이하"
            android:inputType="text"
            android:maxLength="8" />

        <ImageButton
            android:id="@+id/join"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="157dp"
            android:layout_marginBottom="92dp"
            android:background="@drawable/saveicon"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>
</LinearLayout>